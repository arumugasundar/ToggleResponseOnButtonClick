<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE46FF8"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/emoji"
        android:layout_width="match_parent"
        android:layout_height="492dp"
        android:textSize="300sp"
        android:background="#FFB5A7A7"
        android:textAlignment="center"
        android:layout_above="@+id/responseText"
        android:layout_marginBottom="49dp" />


    <TextView
        android:id="@+id/responseText"
        android:layout_width="237dp"
        android:layout_height="46dp"
        android:layout_above="@+id/eatCookieButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="39dp"
        android:text="@string/i_m_so_hungry"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eatCookieButton"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="41dp"
        android:onClick="toggleEmoji"
        android:text="@string/eat_cookie"
        android:textAllCaps="true"
        android:textColor="#EA80FC"
        android:textSize="20sp" />

</RelativeLayout>